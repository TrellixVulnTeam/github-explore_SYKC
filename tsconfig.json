{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // entende que a gente vai usar a dom,
    "allowJs": true, // a gente vai ter tanto js como typescript
    "jsx": "react-jsx", // a gente vai usar jsx
    "noEmit": true, // 
    "strict": true, // modo de lidar com erros
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"] // onde vai estar todo o codigo da aplicacao
}